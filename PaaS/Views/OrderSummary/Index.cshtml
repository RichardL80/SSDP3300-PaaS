@model PaaS.ViewModels.OrderSummaryVM

@{
    ViewData["Title"] = "Order Summary";
}

<h1>Order Summary</h1>

<div>
    <h3 class="mt-2">Order Details</h3>
    <section>
        <ul>
            @foreach (var item in Model.Order.OrderItem)
            {
                <li>
                    <span>@item.Item.Name</span>
                    <span class="ms-5">Size: @item.Size </span>
                    <span class="ms-5">Quantity: @item.Quantity</span>
                    <p class="mt-2">Price: $@item.Item.Price</p>
                </li>
            }
        </ul>
        <p class="lead">Subtotal: $@Model.Subtotal</p>

    </section>
    <section><span>GST: @Model.GST</span><br>
        <span>PST: @Model.PST</span><br>
        <span>Shipping Fee: @Model.ShippingFee</span><br>
        <h4>Total: $@Model.Total</h4>
    </section>
    <section>
        <h3>Address</h3>
        <p>
            @foreach (var address in Model.AddressBook)
            {
                <span>@address.Address1</span>
            }
        </p>
    </section>
    <button>
        <a asp-controller="PayPal" asp-action="Index" asp-route-orderId="@Model.Order.OrderId"
            style="text-decoration: none; color:  black;">Place Order</a>
    </button>

    <p>Estimated Delivery Time: @Model.EstimatedDeliveryTime</p>
</div>

