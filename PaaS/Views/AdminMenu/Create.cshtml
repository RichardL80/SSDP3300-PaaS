@model PaaS.ViewModels.ItemVM

@{
    ViewData["Title"] = "Create Item";
}

<div class="p-grid-container">
    <div class="p-grid-item mb-2">
        <h1>Create Item</h1>
    </div>
    <div class="row">
        <form asp-action="Create" method="post">
            <div class="p-input-grid mb-2">
                <label asp-for="ItemTypeId" class="control-label"></label>
                <select asp-for="ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypes"></select>
                <span asp-validation-for="ItemTypeId" class="text-danger"></span>
            </div>
            <div class="p-input-grid mb-2">
                <label asp-for="IdCategory" class="control-label"></label>
                <select asp-for="IdCategory" class="form-control" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="IdCategory" class="text-danger"></span>
            </div>
            <div class="p-input-grid mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="p-input-grid mb-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="p-input-grid mb-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="p-input-grid mb-2">
                <label asp-for="ImgUrl" class="control-label"></label>
                <input asp-for="ImgUrl" class="form-control"/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>

            <button type="submit" class="btn p-brand mt-2">Save</button>
            <a class="btn btn-secondary ms-2 mt-2" asp-action="Index" asp-controller="Menu">Back to Menu</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}