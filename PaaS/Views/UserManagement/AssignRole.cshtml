@model PaaS.ViewModels.UserRoleVM

<h2>Assign Role</h2>

<form method="post" action="@Url.Action("AssignRole", "UserManagement")">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Email:</label>
        <input type="text" class="form-control" name="Email" value="@Model.Email" readonly />
    </div>

    <div class="mb-3">
        <label>Role:</label>
        <select class="form-control" name="RoleName">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Assign Role</button>
    <a href="@Url.Action("Index", "UserManagement")" class="btn btn-secondary">Back</a>

</form>
