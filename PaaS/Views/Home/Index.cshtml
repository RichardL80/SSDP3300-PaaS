@{
    ViewData["Title"] = "Home Page";
}

@* <div class="p-grid-container p-hero-layout-sm"> *@
<div class="p-grid-container p-hero-layout-lg">
    <div class="p-grid-item p-landing-main-image p-hero-section">
        <div class="p-hero-overlay"></div>
        <div class="p-hero p-grid-container p-hero-content">
            <h1 class="p-hero-title">Pizza as a Service</h1>
            <p class="p-hero-subtitle">Authentic Italian Pizza Made with Love</p>
            <button class="p-cta-button">Order Now</button>
        </div>
    </div>
    <div class="p-grid-item mt-5">
        <h2 class="fw-bold">Special Offers</h2>
        <div class="p-landing-special mt-4">
            <div class="card">
            @* <div class="card" style="width: 18rem;"> *@
                <div class=" p-image-container">
                    <img class="card-img-top p-card-img" src="/images/mix-and-match.jpeg" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Mix & Match</h5>
                    <p class="card-text">Choose any 2 medium pizzas for $20. Perfect for sharing!</p>
                    @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
                </div>
            </div>
            <div class="card">
                @* <div class="card" style="width: 18rem;"> *@
                <div class=" p-image-container">
                    <img class="card-img-top p-card-img" src="/images/daily-discount.jpeg" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Daily Special</h5>
                    <p class="card-text">30% off on all orders above $50, every Tuesday!</p>
                    @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
                </div>
            </div>
            <div class="card">
                @* <div class="card" style="width: 18rem;"> *@
                <div class=" p-image-container">
                    <img class="card-img-top p-card-img" src="/images/holiday-special.jpg" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Holiday Special</h5>
                    <p class="card-text">Free garlic bread with any large pizza ordered during the holiday season!</p>
                    @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
                </div>
            </div>
        </div>
    </div>
</div>