@model PaaS.ViewModels.ContactInfoVM

@{
    ViewData["Title"] = "Edit Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Are you sure you want to delete this Address?
</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteAddress" asp-route-model="@Model" method="post">
            <table class="table table-striped table-bordered table-hover" style="width:288px;">
	            <thead>
                    <tr>
                        <th>Address 1</th>
                        <th>Address 2</th>
                        <th>City</th>
                        <th>Province</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Address1</td>
                        <td>@Model.Address2</td>
                        <td>@Model.CityName</td>
                        <td>@Model.ProvinceName</td>
                    </tr>
                </tbody>
            </table>
            <input type="hidden" asp-for="ContactId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Detail" asp-route-id="@Model.ContactId" class="btn btn-secondary">Back to Contact</a>
            </div>
        </form>
    </div>
</div>
            