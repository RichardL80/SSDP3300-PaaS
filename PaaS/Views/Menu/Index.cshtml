@model PaaS.ViewModels.MenuVM
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Navigation -->
        <div class="col-md-3">
            <nav class="nav flex-column sticky-top">
                <!-- Pizza Sections -->
                @foreach (var category in Model.PizzaCategories.Keys)
                {
                    <a class="nav-link" href="#@category.ToLower().Replace(' ', '-')">@category</a>
                }
                <!-- Other Sections -->
                <a class="nav-link" href="#sides">Sides</a>
                <a class="nav-link" href="#drinks">Drinks</a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link" href="@Url.Action("Create", "AdminMenu")">Create Menu Item</a>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("Customize", "Menu")" target="_blank">Customize Pizza</a>
                }
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Pizza Categories -->
            @foreach (var category in Model.PizzaCategories)
            {
                <section id="@category.Key.ToLower().Replace(' ', '-')" class="mb-5">
                    <h2>@category.Key</h2>
                    <div class="row">
                        @foreach (var item in category.Value)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <img src="@item.ImgUrl" class="card-img-top" alt="@item.Name" width="300" height="300">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <p class="card-text">@item.Description</p>
                                        <p class="h5">@item.Price.ToString("C")</p>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })  
                                            @Html.ActionLink("Delete", "Delete", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })
                                        }
                                        else
                                        {
                                            <button class="btn btn-primary add-to-cart" data-id="@item.ItemId">Add to Cart</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            }

            <!-- Sides Section -->
            <section id="sides" class="mb-5">
                <h2>Sides</h2>
                <div class="row">
                    @foreach (var item in Model.Sides)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <img src="@item.ImgUrl" class="card-img-top" alt="@item.Name" width="300" height="300">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description</p>
                                    <p class="h5">@item.Price.ToString("C")</p>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Delete", "Delete", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary add-to-cart" data-id="@item.ItemId">Add to Cart</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>

            <!-- Drinks Section -->
            <section id="drinks" class="mb-5">
                <h2>Drinks</h2>
                <div class="row">
                    @foreach (var item in Model.Drinks)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <img src="@item.ImgUrl" class="card-img-top" alt="@item.Name" width="300" height="300">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description</p>
                                    <p class="h5">@item.Price.ToString("C")</p>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Delete", "Delete", "AdminMenu", new { id = item.ItemId }, new { @class = "btn btn-warning" })
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary add-to-cart" data-id="@item.ItemId">Add to Cart</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>