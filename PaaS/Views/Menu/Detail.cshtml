@model PaaS.ViewModels.ItemVM

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <h4>Price: $@Model.Price</h4>
            <p>Category: @Model.CategoryDescription</p>
            <p>Type: @Model.ItemTypeDescription</p>

            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                <input type="hidden" name="itemId" value="@Model.ItemId" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>

            <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary mt-2">Return to Menu</a>
        </div>
    </div>
</div>
